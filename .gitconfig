  name = Justin Krueger
  email = justin@kroo.gs

[github]
  user = kroogs

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  quotepath = false

[push]
  default = simple

[color "branch"]
  local = green
  remote = magenta

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[merge]
  tool = vimdiff

[mergetool]
  prompt = true

[difftool]
  prompt = false

[diff]
  tool = vimdiff
